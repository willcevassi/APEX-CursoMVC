@model ExercicioCap05.Models.HelpersModel

@{
    ViewBag.Title = "ComponentesHelpers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Helpers HTML</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Selecione um Estado", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownListFor(model => model.EstadoSelecionado, Model.DropDownEstado, new { @class="form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Selecione os Etados", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("Estados",new MultiSelectList(ViewBag.EstadosListBox,"Sigla","Nome"),
                                new { multiple = "multiple", @style = "width:300px; padding-left: 5px"  })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}





